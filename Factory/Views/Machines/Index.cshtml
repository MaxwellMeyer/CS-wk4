@{
  Layout = "_Layout";
}
@using Factory.Models;
<h1>Machines:</h1>
<hr>
@if (@Model.Count == 0)
{
  <p>No Machines found in our factory, Woops!!!.</p>
}
<ul>
  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachName}", "Details", new { id = machine.MachineId })</li>
  }
</ul>
<hr>
<p>@Html.ActionLink("Add a new Machine!", "Create")</p>
<hr>